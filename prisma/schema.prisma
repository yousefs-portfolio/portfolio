generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Project {
  id          String   @id @default(cuid())
  title       String
  titleAr     String?  // Arabic title
  description String
  descriptionAr String? // Arabic description
  layer       String   // "LAYER 1", "LAYER 2", "LAYER 3"
  layerName   String   // "THE LANGUAGE", "THE FRAMEWORK", "THE EXPERIENCE"
  layerNameAr String?  // Arabic layer name
  content     String   // Detailed content/description
  contentAr   String?  // Arabic content
  tech        String   @default("") // Technologies used (JSON array)
  techAr      String   @default("") // Arabic technologies (JSON array)
  liveUrl     String?  // Live demo URL
  githubUrl   String?  // GitHub repository URL
  featured    Boolean  @default(false)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("projects")
}

model BlogPost {
  id          String   @id @default(cuid())
  title       String
  titleAr     String?  // Arabic title
  content     String   // Markdown content
  contentAr   String?  // Arabic markdown content
  excerpt     String   // Short description
  excerptAr   String?  // Arabic excerpt
  tags        String   @default("") // Tags for categorization (JSON array)
  tagsAr      String   @default("") // Arabic tags (JSON array)
  published   Boolean  @default(false)
  featured    Boolean  @default(false)
  slug        String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("blog_posts")
}

model Service {
  id          String   @id @default(cuid())
  title       String
  titleAr     String?  // Arabic title
  description String
  descriptionAr String? // Arabic description
  icon        String?  // Icon identifier
  features    String   @default("") // Service features (JSON array)
  featuresAr  String   @default("") // Arabic features (JSON array)
  featured    Boolean  @default(false)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("services")
}

model Contact {
  id           String   @id @default(cuid())
  name         String
  email        String?
  whatsapp     String?
  requirements String
  createdAt    DateTime @default(now())

  @@map("contacts")
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  name     String?
  isAdmin  Boolean @default(false)
  
  @@map("users")
}
